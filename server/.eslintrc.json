{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-unresolved": "off",
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1
      }
    ],
    "func-names": "off",
    "vars-on-top": "off",
    "global-require": "off",
    "no-shadow": [
      "error",
      {
        "allow": [
          "err",
          "callback"
        ]
      }
    ],
    "max-len": "off",
    "linebreak-style": "off",
    "consistent-return": "off",
    "no-return-assign": "off",
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages"
      }
    ]
  }
}
